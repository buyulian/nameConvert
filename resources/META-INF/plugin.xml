<idea-plugin>
  <id>com.buyulian.company.unique.plugin.id</id>
  <name>Convert Name</name>
  <version>1.0</version>
  <vendor email="67764256@qq.com" url="https://github.com/buyulian/nameConvert">Liu Jiacun</vendor>

  <description><![CDATA[
      Convert between camelCase and snake_case.<br>
    ]]></description>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="145.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <action id="EditorBasics.EditorIllustration" class="MainAction" text="Convert Name"
            description="Convert between camelCase and snake_case">
      <add-to-group group-id="EditorPopupMenu" anchor="last"/>
    </action>
  </actions>

</idea-plugin>